<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:padding">3dip</item>&lt;!&ndash;Added to enhance relative layout, remove to fix old layout&ndash;&gt;-->
    </style>

    <style name="ForTextViews" parent="AppTheme">
        <item name="android:padding">4dip</item>
    </style>

    <style name="ForRadioGroup" parent="AppTheme">
        <item name="android:padding">5dip</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ForButton" parent="AppTheme">
        <item name="android:padding">8dip</item>
    </style>

</resources>